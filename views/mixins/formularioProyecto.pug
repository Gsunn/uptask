//-El formulario esta vacio por defecto
mixin formularioProyecto(proyecto = {}) 
    
    //- Impotante el tabulado
    form(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST").agregar-proyecto
        .campo
            label(for="nombre") Proyecto:
            input(type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto" value=proyecto.nombre)
        .campo.enviar   
            input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}`).boton
